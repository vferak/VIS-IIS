@using DomainLayer.Models
@{
    ViewBag.Title = "Home Page";

    IEnumerable<Tasks> tasks = ViewBag.Tasks;
}

<div class="row">
    <div class="col-12 mt-4">
        <h2 class="mb-3">
            Úkoly
            <span class="float-right">
                <a href="@Url.Action("Create", "Tasks")" class="btn btn-primary">Nový úkol</a>
            </span>
        </h2>
