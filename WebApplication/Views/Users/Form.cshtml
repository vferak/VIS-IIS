@model DomainLayer.Models.Users
<div class="row">
    <div class="col-md-12">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    </div>
    <div class="col-md-10 mx-auto">
        <h2>Nový klient</h2>
        
        <form asp-controller="Users" asp-action="@ViewContext.RouteData.Values["action"].ToString()" method="post">
            <div class="form-group">
                <input asp-for="ModelId" type="hidden"/>
            </div>
            <div class="form-group required">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"/>
            </div>
            <div class="form-group required">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control"/>
            </div>
            <div class="form-group required">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control"/>
            </div>
            <div class="form-group required">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control"/>
            </div>
            <div class="form-group required">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
            </div>
            <div class="form-group required">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control"/>
            </div>
            <div class="form-group required">
                <label asp-for="IsManager" class="control-label"></label>
                <input asp-for="IsManager" type="checkbox" class="form-control"/>
            </div>

            <button type="submit" class="btn btn-primary">Uložit</button>
        </form>
    </div>
</div>